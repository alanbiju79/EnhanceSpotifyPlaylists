.container
  .row.pl-4.d-flex.align-items-center
    .col-md-6.ml-0.pl-0
      %h3.login-heading.my-4 ðŸ”¥ Enhance Your Playlist.
    .col-md-6
      = link_to('Log Out', 'https://open.spotify.com/browse', class: "btn btn-sm bg-dark text-white float-right ml-2")
      = link_to('Open Spotify', 'https://open.spotify.com/browse', class: "btn btn-sm bg-success text-white float-right")

  .row
    .col-md-6
      %img.img-fluid{:alt => "Responsive image", :src => "#{@playlist.images.first.try(:fetch, "url")}"}/
    .col-md-6
      .card.p-4.mb-4.bg-dark.text-white
        .col-6.w-50
          %h3.login-heading
            = @playlist.name
          %p.text-white
            = "#{@playlist.tracks.count} Songs"
      .card.p-3.bg-light
        %table.table.table-sm.table-borderless
          %thead
            %tr
              %th{:scope => "col"} Track
              %th{:scope => "col"} Artist
          %tbody
            - @playlist.tracks.each do |i|
              %tr
                %th.font-weight-normal{:scope => "row"}
                  = i.name
                %th.font-weight-light{:scope => "row"}
                  = i.artists.first.name
